schema {
    query: Query
    mutation: Mutation
}

type Query {
    getAllHairstyles: [Hairstyle]
    getHairstyleById(id: ID): Hairstyle
}

type Hairstyle {
    id: ID
    name: String
    description: String
    time: Int
    price: Float
}

type Mutation {
    insertHairstyle(hairstyle: HairstyleInput): Int
    deleteHairstyleById(id: ID): Int
}

input HairstyleInput {
    name: String
    description: String
    time: Int
    price: Float
}